{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "noEmit": false,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
